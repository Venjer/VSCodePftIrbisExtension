{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Irbis",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.irbis",
				"match": "\\b(if|then|else|fi|return|&unifor|&uf)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.irbis",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.irbis",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.irbis"
}