{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "irbis",
	"scopeName": "source.irbis",
	"patterns": [
		{
			"name": "comment.line.number-sign.irbis",
			"match": "/\\*.*$"
		  },
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.irbis",
				"match": "(if|then|else|fi|return|&unifor|&uf)"
			}]
		},
		"strings": {
			"name": "string.quoted.double.irbis",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.irbis",
					"match": "\\\\."
				}
			]
		}
	}

}